# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_ADMIN_BOT_TOKEN=your_admin_bot_token_here
ADMIN_CHAT_IDS=123456789,987654321

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/telegram_quiz_bot
DATABASE_TEST_URL=postgresql://username:password@localhost:5432/telegram_quiz_bot_test

# Flask Configuration
FLASK_SECRET_KEY=your_secret_key_here
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_USE_TLS=True
DEFAULT_FROM_EMAIL=your_email@gmail.com

# Redis Configuration (for Celery)
REDIS_URL=redis://localhost:6379/0

# Security
ENCRYPTION_KEY=your_encryption_key_here
JWT_SECRET_KEY=your_jwt_secret_here

# File Upload
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216

# Backup Configuration
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=backups

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log